<%= form_with model: @list do |f| %>
  <div class="card m-5 p-5">
    <div class="mb-3">
      <%= f.label :title, class:"form-label" %>
      <%= f.text_field :title, class:"form-control" %>
    </div>
    <div class="mb-3">
      <%= f.label :overview, class:"form-label" %>
      <%= f.text_field :overview, class:"form-control" %>
    </div>
    <div class="mb-3">
      <%= f.label :poster_url, class:"form-check-label" %>
      <%= f.text_field :poster_url, class:"form-control" %>
    </div>
    <div class="mb-3">
      <%= f.submit :class => 'btn btn-primary'%>
    </div>
  </div>
<% end %>
