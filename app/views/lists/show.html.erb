<div class="card p-5 m-5">
  <h2 class="text-center"><%= @list.name %></h2>
  <% @list.movies.each do |movie| %>
  <%= movie.title %>
  <% end %>
</div>
<div class="card p-5 m-5">
  <div class="d-flex gap-3 justify-content-center">
    <div class="my-3">
      <%= link_to "Modification", edit_list_path(@list), :class => 'btn btn-primary'%>
    </div>
    <div class="my-3">
      <%= link_to "Supprimer cette liste", list_path(@list),:class => 'btn btn-primary', data: {turbo_method: :delete}%>
    </div>
    <div class="my-3">
      <%= link_to "Voir mes listes", lists_path, :class => 'btn btn-primary' %>
    </div>
  </div>
</div>
